
# Identity Profile Generator - Environment Variables
# Copy this file to .env and update the values as needed

# Database Configuration
# These are the default values used by the application
# Update these if your PostgreSQL setup is different

DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=identity_db

# Server Configuration
PORT=5000
NODE_ENV=development

# Optional: OpenAI API Key (if you want to enhance profile generation)
# OPENAI_API_KEY=your_openai_api_key_here

# Session Configuration (for future authentication features)
# SESSION_SECRET=your_session_secret_here

# Development Settings
# VITE_API_URL=http://localhost:5000/api
